<section class="text-center py-16 md:py-24 relative overflow-hidden bg-gradient-to-br from-slate-900 via-indigo-950/30 to-slate-900 border-b border-retro-cyan/20">
  <!-- Refined Retro Background -->
  <div class="absolute inset-0 opacity-20">
    <svg class="w-full h-full" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="retro-grid" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
          <rect width="20" height="20" fill="none"/>
          <path d="M0 10h20M10 0v20" stroke="currentColor" stroke-width="0.5" fill="none" class="text-retro-cyan"/>
          <circle cx="10" cy="10" r="1" fill="currentColor" class="text-retro-pink"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#retro-grid)"/>
    </svg>
  </div>

  <!-- Subtle Animated Elements -->
  <div class="absolute inset-0">
    <div class="w-1 h-1 bg-retro-cyan rounded-full absolute top-1/4 left-1/4 animate-pulse"></div>
    <div class="w-2 h-2 bg-retro-pink rounded-full absolute bottom-1/3 right-1/4 animate-pulse delay-700"></div>
    <div class="w-1 h-1 bg-retro-green rounded-full absolute top-2/3 left-3/4 animate-pulse delay-1000"></div>
  </div>

  <div class="relative z-10">
    <!-- Clean Terminal Header -->
    <div class="font-mono text-retro-green text-sm mb-6 tracking-wider">
      $ whoami
    </div>
    
    <h1 class="text-5xl md:text-7xl font-bold font-retro mb-6 tracking-tight">
      <span class="text-retro-cyan">JOE</span>
      <span class="text-retro-cyan ml-4">WHITTLE</span>
    </h1>
    
    <!-- Professional Subtitle -->
    <div class="bg-slate-800/60 backdrop-blur-sm border border-retro-cyan/40 p-6 rounded-xl mb-8 max-w-2xl mx-auto shadow-lg shadow-retro-cyan/10">
      <div class="text-sm text-retro-yellow mb-2 font-mono">[CYBERSECURITY_ENGINEER]</div>
      <p id="typing-text" class="text-xl text-slate-200 font-mono"></p>
    </div>
    
    <p class="text-lg text-slate-300 max-w-2xl mx-auto mt-6 px-4 leading-relaxed">
      <span class="text-retro-cyan font-semibold">Cybersecurity Engineer</span> specializing in threat detection, automation, and secure infrastructure.
      <br/>Passionate about building resilient systems and exploring interactive technologies.
    </p>

    <!-- Professional Action Buttons -->
    <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-6 mt-10 px-4">
      <a href="/demo" class="bg-retro-cyan hover:bg-retro-cyan/80 text-slate-900 font-bold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-retro-cyan/30 hover:shadow-retro-cyan/50">
        View Demo
      </a>
      <a href="/workflows" class="bg-gradient-to-r from-retro-purple to-retro-pink hover:from-retro-purple/80 hover:to-retro-pink/80 text-white font-bold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-retro-purple/30">
        Live Systems
      </a>
      <a href="/guestbook" class="border-2 border-retro-green text-retro-green hover:bg-retro-green hover:text-slate-900 font-bold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-retro-green/20">
        Guest Book
      </a>
      <a href="/enhanced-security-scanner" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-purple-500/30 hover:shadow-purple-500/50 border border-purple-400/50">
        ðŸš€ Enhanced Security Scanner
      </a>
    </div>

    <!-- Professional Stats Display -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-16 max-w-5xl mx-auto px-4">
      <div class="bg-slate-800/60 backdrop-blur-sm border border-retro-green/40 rounded-xl p-6 hover:border-retro-green hover:shadow-lg hover:shadow-retro-green/20 transition-all transform hover:scale-105">
        <div class="text-3xl font-bold text-retro-green mb-2">50+</div>
        <div class="text-sm text-slate-400 uppercase tracking-wider">Security Incidents Resolved</div>
      </div>
      <div class="bg-slate-800/60 backdrop-blur-sm border border-retro-cyan/40 rounded-xl p-6 hover:border-retro-cyan hover:shadow-lg hover:shadow-retro-cyan/20 transition-all transform hover:scale-105">
        <div class="text-3xl font-bold text-retro-cyan mb-2">40%</div>
        <div class="text-sm text-slate-400 uppercase tracking-wider">Faster Response Time</div>
      </div>
      <div class="bg-slate-800/60 backdrop-blur-sm border border-retro-pink/40 rounded-xl p-6 hover:border-retro-pink hover:shadow-lg hover:shadow-retro-pink/20 transition-all transform hover:scale-105">
        <div class="text-3xl font-bold text-retro-pink mb-2">98%</div>
        <div class="text-sm text-slate-400 uppercase tracking-wider">Vulnerability Closure Rate</div>
      </div>
      <div class="bg-slate-800/60 backdrop-blur-sm border border-retro-yellow/40 rounded-xl p-6 hover:border-retro-yellow hover:shadow-lg hover:shadow-retro-yellow/20 transition-all transform hover:scale-105">
        <div class="text-3xl font-bold text-retro-yellow mb-2">24/7</div>
        <div class="text-sm text-slate-400 uppercase tracking-wider">Security Monitoring</div>
      </div>
    </div>

    <!-- Retro Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <div class="bg-retro-cyan/20 p-3 rounded-full border border-retro-cyan">
        <svg class="w-6 h-6 text-retro-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
  </div>
</section>

<script>
  // Professional typing effect
  const text = "Building reliable systems through innovative technology solutions";
  const typingText = document.getElementById('typing-text');
  let index = 0;

  function typeWriter() {
    if (index < text.length && typingText) {
      typingText.innerHTML += text.charAt(index);
      index++;
      setTimeout(typeWriter, 50);
    } else if (typingText) {
      // Add subtle cursor
      typingText.innerHTML += '<span class="animate-pulse text-blue-400">|</span>';
    }
  }

  // Start effect when page loads
  document.addEventListener('DOMContentLoaded', () => {
    setTimeout(typeWriter, 800);
  });
</script>
