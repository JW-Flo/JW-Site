---
import resume from '../data/resume.json';
---
<section class="space-y-6">
  <!-- Professional Summary -->
  <div class="bg-dark/50 backdrop-blur-sm border border-neon-blue/30 rounded-lg p-4 print-section">
    <h2 class="text-xl font-bold text-neon-cyan mb-3">Professional Summary</h2>
    <p class="text-slate-300 leading-relaxed">{resume.summary}</p>
  </div>

  <div class="grid md:grid-cols-3 gap-6">
    <div class="space-y-4">
      <!-- Core Skills - Condensed -->
      <div class="bg-dark/50 backdrop-blur-sm border border-neon-blue/30 rounded-lg p-4 print-section">
        <h2 class="font-semibold text-lg text-neon-blue mb-3 flex items-center">
          <span class="w-2 h-2 bg-neon-blue rounded-full mr-2"></span>
          Core Skills
        </h2>
        <div class="grid grid-cols-1 gap-1">
          {resume.skills.slice(0, 8).map((skill) => (
            <div class="flex items-center space-x-2 text-sm">
              <div class="w-1 h-1 bg-neon-cyan rounded-full flex-shrink-0"></div>
              <span class="text-slate-300">{skill}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Tools & Certifications Combined -->
      {resume.tools && (
        <div class="bg-dark/50 backdrop-blur-sm border border-neon-green/30 rounded-lg p-4 print-section">
          <h2 class="font-semibold text-lg text-neon-green mb-3 flex items-center">
            <span class="w-2 h-2 bg-neon-green rounded-full mr-2"></span>
            Tools & Certifications
          </h2>
          <div class="space-y-3">
            <div class="mb-3">
              <h3 class="text-sm font-medium text-neon-green mb-2">Technical Tools</h3>
              <div class="flex flex-wrap gap-1">
                {resume.tools.slice(0, 6).map((tool) => (
                  <span class="px-2 py-1 bg-neon-green/10 border border-neon-green/20 rounded text-xs text-neon-green">
                    {tool}
                  </span>
                ))}
              </div>
            </div>
            <div>
              <h3 class="text-sm font-medium text-neon-pink mb-2">Certifications</h3>
              <div class="space-y-2">
                {resume.certifications.slice(0, 3).map((cert) => (
                  <div class="text-xs">
                    <div class="font-medium text-slate-300">{cert.name}</div>
                    <div class="text-neon-pink">{cert.issuer}{cert.issued ? ` â€¢ ${cert.issued}` : ''}{cert.expires ? ` â€¢ ${cert.expires}` : ''}</div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      )}

      <!-- Contact -->
      <div class="bg-dark/50 backdrop-blur-sm border border-neon-cyan/30 rounded-lg p-4 print-section">
        <h2 class="font-semibold text-lg text-neon-cyan mb-3 flex items-center">
          <span class="w-2 h-2 bg-neon-cyan rounded-full mr-2"></span>
          Contact
        </h2>
        <div class="space-y-2">
          <a class="flex items-center space-x-2 text-sm group" href={`mailto:${resume.contact.email}`}>
            <span class="text-neon-blue">âœ‰</span>
            <span class="text-slate-300 group-hover:text-neon-blue transition-colors">{resume.contact.email}</span>
          </a>
          <a class="flex items-center space-x-2 text-sm group" href={`https://github.com/${resume.contact.github}`} target="_blank">
            <span class="text-neon-blue">âŒ¨</span>
            <span class="text-slate-300 group-hover:text-neon-blue transition-colors">GitHub</span>
          </a>
          <a class="flex items-center space-x-2 text-sm group" href={`https://${resume.contact.linkedin}`} target="_blank">
            <span class="text-neon-cyan">ðŸ’¼</span>
            <span class="text-slate-300 group-hover:text-neon-cyan transition-colors">LinkedIn</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Experience Section - Condensed -->
    <div class="md:col-span-2 space-y-6">
      <h2 class="text-xl font-bold text-neon-pink mb-4">Professional Experience</h2>
      {resume.experience.map((job, jobIndex) => (
        <div class="bg-dark/50 backdrop-blur-sm border border-neon-cyan/30 rounded-lg p-4 hover:border-neon-cyan/50 transition-colors print-section">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-3">
            <h3 class="text-lg font-bold text-neon-pink">{job.position}</h3>
            <div class="text-right">
              <div class="text-neon-cyan font-medium text-sm">{job.company}</div>
              <div class="text-xs uppercase tracking-wide text-slate-400">{job.duration} â€¢ {job.location}</div>
            </div>
          </div>
          <div class="space-y-2">
            {job.description.slice(0, 4).map((desc) => (
              <div class="flex items-start space-x-2">
                <div class="w-1 h-1 bg-neon-cyan rounded-full mt-2 flex-shrink-0"></div>
                <span class="text-slate-300 leading-relaxed text-sm">{desc}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Key Achievements - Condensed -->
  {resume.highlights && (
    <div class="bg-gradient-to-r from-neon-blue/10 via-neon-cyan/10 to-neon-green/10 border border-neon-cyan/30 rounded-lg p-4 print-section">
      <h2 class="text-xl font-bold text-neon-cyan mb-4 text-center">Key Achievements</h2>
      <div class="grid md:grid-cols-2 gap-3">
        {resume.highlights.slice(0, 8).map((highlight) => (
          <div class="flex items-start space-x-2 p-2 bg-dark/50 rounded">
            <div class="w-2 h-2 bg-neon-cyan rounded-full mt-1 flex-shrink-0"></div>
            <span class="text-slate-300 text-sm leading-relaxed">{highlight}</span>
          </div>
        ))}
      </div>
    </div>
  )}
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }

  /* Enhanced Print Styles for Clean PDF Resume */
  @media print {
    * {
      -webkit-print-color-adjust: exact !important;
      color-adjust: exact !important;
      print-color-adjust: exact !important;
    }

    body {
      font-family: 'Georgia', 'Times New Roman', serif !important;
      font-size: 11px !important;
      line-height: 1.3 !important;
      color: #000 !important;
      background: white !important;
      margin: 0 !important;
      padding: 0 !important;
    }

    /* Force remove all backgrounds, borders, and animations */
    section, div, span, h1, h2, h3, h4, h5, h6, p {
      background: white !important;
      background-color: white !important;
      background-image: none !important;
      border: none !important;
      box-shadow: none !important;
      backdrop-filter: none !important;
      animation: none !important;
      transform: none !important;
      opacity: 1 !important;
      transition: none !important;
    }

    /* Force text colors */
    * {
      color: #000 !important;
    }

    h1, h2, h3, h4, h5, h6 {
      color: #000 !important;
      font-weight: bold !important;
      page-break-after: avoid !important;
    }

    /* Hide all decorative elements */
    .w-1, .w-2, .w-3, .w-8, 
    .h-1, .h-2, .h-3, .h-8,
    .bg-neon-blue, .bg-neon-cyan, .bg-neon-green, .bg-neon-pink,
    .rounded-full, .rounded {
      display: none !important;
    }

    /* Clean section structure */
    .print-section {
      border-bottom: 1px solid #ddd !important;
      padding-bottom: 6px !important;
      margin-bottom: 12px !important;
      page-break-inside: avoid !important;
    }

    /* Compact spacing */
    .space-y-6 > * + * {
      margin-top: 8px !important;
    }

    .space-y-4 > * + * {
      margin-top: 6px !important;
    }

    .space-y-3 > * + * {
      margin-top: 4px !important;
    }

    .space-y-2 > * + * {
      margin-top: 3px !important;
    }

    /* Grid layout for print */
    .md\\:grid-cols-3 {
      display: grid !important;
      grid-template-columns: 1fr 2fr !important;
      gap: 16px !important;
    }

    .md\\:col-span-2 {
      grid-column: span 2 !important;
    }

    /* Clean list styling */
    ul {
      list-style-type: disc !important;
      margin-left: 16px !important;
    }

    li {
      margin-bottom: 1px !important;
    }

    /* Links */
    a {
      color: #000 !important;
      text-decoration: none !important;
    }

    /* Page formatting */
    @page {
      margin: 0.5in !important;
      size: letter !important;
    }

    /* Hide elements that shouldn't print */
    .print\\:hidden {
      display: none !important;
    }

    /* Ensure content fits on one page */
    .grid {
      page-break-inside: avoid !important;
    }
  }
</style>
