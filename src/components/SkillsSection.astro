---
import resume from '../data/resume.json';
---
<section class="py-20 relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-l from-transparent via-neon-pink/5 to-transparent"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_30%,rgba(0,255,255,0.1),transparent_50%)]"></div>

  <div class="relative z-10">
    <h2 class="text-4xl md:text-5xl font-bold font-sans text-center text-neon-green mb-4">
      üõ°Ô∏è Cybersecurity Expertise
    </h2>
    <p class="text-center text-slate-300 mb-12 max-w-3xl mx-auto px-4">
      Specialized in protecting digital assets through proactive security measures,
      automated threat detection, and comprehensive risk management.
    </p>

    <!-- Core Skills Grid: show only top core skills -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto mb-12">
      {(() => {
        // Show a concise, curated list of core skills; group the rest under 'Other Skills'
        const topSkills = resume.skills.slice(0, 8);
        const otherSkills = resume.skills.slice(8);
        return (
          <>
            {topSkills.map((skill, index) => (
              <div class={`p-6 border border-neon-blue/50 rounded-lg hover:border-neon-blue hover:shadow-[0_0_18px_rgba(0,255,255,0.25)] transition-colors duration-300 text-center group bg-dark/50 backdrop-blur-sm will-change-transform ${
                index < 6 ? 'animate-fade-in-up' : ''
              }`} style={`animation-delay: ${index * 0.1}s`}>
                <div class="w-12 h-12 mx-auto mb-3 bg-neon-blue/20 rounded-full flex items-center justify-center group-hover:bg-neon-blue/30 transition-colors">
                  <span class="text-neon-blue text-xl">‚ö°</span>
                </div>
                <p class="text-neon-blue font-bold group-hover:text-white transition-colors transition-transform group-hover:-translate-y-0.5">{skill}</p>
              </div>
            ))}

            {/* Other Skills card */}
            {otherSkills.length > 0 && (
              <div class="p-6 border border-neon-blue/30 rounded-lg bg-dark/60 backdrop-blur-sm text-center">
                <div class="w-12 h-12 mx-auto mb-3 bg-neon-cyan/20 rounded-full flex items-center justify-center">
                  <span class="text-neon-cyan text-xl">‚ãØ</span>
                </div>
                <p class="text-slate-300 font-semibold mb-3">Other Skills</p>
                <div class="flex flex-wrap justify-center gap-2">
                  {otherSkills.map((s, i) => (
                    <span class="px-3 py-1 text-xs bg-slate-800/60 border border-slate-700 rounded text-slate-300">{s}</span>
                  ))}
                </div>
              </div>
            )}
          </>
        );
      })()}
    </div>

    <!-- Tools & Platforms -->
    <div class="mb-12">
      <h3 class="text-2xl md:text-3xl font-bold text-center text-neon-cyan mb-8">
        üõ†Ô∏è Tools & Platforms
      </h3>
      <div class="flex flex-wrap justify-center gap-3 max-w-5xl mx-auto">
        {resume.tools.map((tool, index) => (
          <span class={`px-4 py-2 bg-gradient-to-r from-neon-green/10 to-neon-blue/10 border border-neon-green/30 rounded-full text-neon-green text-sm hover:border-neon-green hover:shadow-[0_0_12px_rgba(0,255,255,0.18)] transition-colors duration-300 cursor-default ${
            index < 10 ? 'animate-fade-in-up' : ''
          }`} style={`animation-delay: ${index * 0.05}s`}>
            {tool}
          </span>
        ))}
      </div>
    </div>

    <!-- Certifications: render proper fields -->
    <div class="text-center">
      <h3 class="text-2xl md:text-3xl font-bold text-neon-pink mb-8">
        üèÜ Professional Certifications
      </h3>
      <div class="flex flex-wrap justify-center gap-4 max-w-4xl mx-auto">
        {resume.certifications.map((cert, index) => (
          <div class={`px-6 py-3 bg-gradient-to-r from-neon-pink/10 to-neon-yellow/10 border border-neon-pink/50 rounded-lg text-slate-200 font-medium hover:border-neon-pink hover:shadow-[0_0_18px_rgba(255,0,255,0.25)] transition-colors duration-300 ${
            index < 6 ? 'animate-fade-in-up' : ''
          }`} style={`animation-delay: ${index * 0.1}s`}>
            <div class="font-semibold text-slate-100">{cert.name}</div>
            <div class="text-xs text-slate-400 mt-1">{cert.issuer} ‚Ä¢ Issued: {cert.issued} ‚Ä¢ Expires: {cert.expires}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-12">
      <p class="text-slate-400 mb-6">Ready to discuss how these skills can benefit your organization?</p>
      <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
        <a href="/contact" class="px-8 py-4 bg-neon-pink text-dark font-bold rounded-lg hover-neon transition pulse-neon text-lg">
          Start a Conversation
        </a>
        <a href="/demo" class="px-8 py-4 border-2 border-neon-cyan text-neon-cyan font-bold rounded-lg hover:bg-neon-cyan hover:text-dark transition text-lg">
          Try the Games
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }
</style>
