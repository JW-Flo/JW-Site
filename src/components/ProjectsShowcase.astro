---
import projects from '../data/projects.json';
---
<section class="py-20 relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-neon-green/5 to-transparent"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(0,255,255,0.1),transparent_50%)]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(255,0,255,0.1),transparent_50%)]"></div>

  <div class="relative z-10">
    <h2 class="text-4xl md:text-5xl font-bold font-sans text-center text-neon-blue mb-4 relative">
      ðŸš€ Featured Projects
    </h2>
    <p class="text-center text-slate-300 mb-12 max-w-2xl mx-auto px-4">
      Explore cutting-edge cybersecurity solutions, automation tools, and interactive experiences.
      Each project demonstrates real-world security engineering and modern development practices.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.filter(p => p.featured).map(p => (
        <div class="bg-dark/80 backdrop-blur-sm border border-neon-pink/50 rounded-lg p-6 hover:border-neon-pink hover:shadow-[0_0_22px_rgba(255,0,255,0.25)] transition-colors duration-300 group relative overflow-hidden will-change-transform">
          <div class="absolute inset-0 pointer-events-none transition-opacity duration-300 opacity-0 group-hover:opacity-100 bg-[radial-gradient(circle_at_30%_30%,rgba(255,0,255,0.15),transparent_60%)]"></div>
          <div class="absolute inset-0 bg-gradient-to-br from-neon-pink/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative z-10 transition-transform duration-300 ease-out group-hover:-translate-y-1">
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-bold text-neon-pink group-hover:text-white transition-colors duration-300">{p.name}</h3>
              <span class={`px-2 py-1 text-xs rounded-full ${
                p.status === 'production' ? 'bg-green-500/20 text-green-400' :
                p.status === 'preview' ? 'bg-yellow-500/20 text-yellow-400' :
                'bg-blue-500/20 text-blue-400'
              }`}>
                {p.status}
              </span>
            </div>
            <p class="text-slate-300 group-hover:text-white transition-colors duration-300 mb-4 leading-relaxed">{p.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {p.tags.map(tag => (
                <span class="px-2 py-1 text-xs bg-neon-blue/20 text-neon-blue rounded border border-neon-blue/30">
                  {tag}
                </span>
              ))}
            </div>
            <div class="flex space-x-3 opacity-0 group-hover:opacity-100 transition-opacity transition-transform duration-300 translate-y-2 group-hover:translate-y-0">
              {p.github && (
                <a href={p.github} target="_blank" rel="noopener" class="flex items-center space-x-1 text-neon-blue hover:text-neon-green transition-colors duration-200">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                  <span>Code</span>
                </a>
              )}
              {p.live && (
                <a href={p.live} target="_blank" rel="noopener" class="flex items-center space-x-1 text-neon-green hover:text-neon-pink transition-colors duration-200">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                  <span>Live Demo</span>
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-12">
      <p class="text-slate-400 mb-6">Want to see more projects or collaborate?</p>
      <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
        <a href="/contact" class="px-6 py-3 bg-neon-blue text-dark font-bold rounded hover-neon transition pulse-neon">
          Let's Connect
        </a>
        <a href="/resume" class="px-6 py-3 border border-neon-pink text-neon-pink font-bold rounded hover:bg-neon-pink hover:text-dark transition">
          View Resume
        </a>
      </div>
    </div>
  </div>
</section>
