---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ProjectsShowcase from '../components/ProjectsShowcase.astro';
import SkillsSection from '../components/SkillsSection.astro';
import BioSection from '../components/BioSection.astro';
import ContactSection from '../components/ContactSection.astro';
import WaitlistWidget from '../components/WaitlistWidget.astro';
---
<BaseLayout title="Joe Whittle | Cybersecurity Engineer" description="Portfolio, projects, resume & journey of a cybersecurity engineer exploring America.">
  <script type="application/ld+json">{JSON.stringify({
    '@context':'https://schema.org',
    '@type':'Person',
    name:'Joseph (Joe) Whittle',
    alternateName: 'Andrey Sergeevich',
    jobTitle:'Cybersecurity Engineer',
    url: import.meta.env.SITE_URL || 'https://thewanderingwhittle.com',
    sameAs:[
      'https://www.linkedin.com/in/joseph-whittle-9920537b/',
      'https://github.com/JW-Flo'
    ]
  })}</script>
  <script type="application/ld+json">{JSON.stringify({
    '@context':'https://schema.org',
    '@type':'WebSite',
    name:'Joe Whittle Portfolio',
    url: import.meta.env.SITE_URL || 'https://thewanderingwhittle.com'
  })}</script>
  <Hero />
  <div class="px-4">
    <WaitlistWidget />
  </div>
  <SkillsSection />
  <ProjectsShowcase />
  <BioSection />
  <ContactSection />
</BaseLayout>
