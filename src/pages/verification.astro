---
import BaseLayout from '../layouts/BaseLayout.astro';
const dnsTxtRecords = [
  { name: '_identity.andreysergeevich.me', value: 'v=proof;id=joseph-whittle;sig=PLACEHOLDER_SIGNATURE' }
];
const signedStatement = `I, Joseph Whittle ("Andrey Sergeevich" professionally), assert control over the domain andreysergeevich.me for portfolio and identity verification purposes. Signed: PLACEHOLDER_SIGNATURE`;
---
<BaseLayout title="Verification" description="Identity verification records">
  <h1 class="text-2xl font-semibold mb-4">Verification</h1>
  <h2 class="text-lg font-medium mb-2">DNS TXT Records</h2>
  <ul class="mb-6 list-disc ml-6 text-sm">
    {dnsTxtRecords.map(r => <li><code>{r.name}</code>: <code>{r.value}</code></li>)}
  </ul>
  <h2 class="text-lg font-medium mb-2">Signed Statement</h2>
  <pre class="text-xs bg-gray-100 p-3 overflow-auto">{signedStatement}</pre>
  <p class="text-xs opacity-70 mt-4">Replace PLACEHOLDER_SIGNATURE with an actual detached signature or cryptographic proof.</p>
</BaseLayout>
