---
// Legacy basic security scanner route now permanently redirects to the enhanced scanner.
// Provide both GET and POST handlers so form submissions also redirect cleanly.
export async function GET() {
  return new Response(null, { status: 301, headers: { Location: '/enhanced-security-scanner' } });
}
export async function POST() {
  return new Response(null, { status: 301, headers: { Location: '/enhanced-security-scanner' } });
}
// Minimal fallback HTML for rare clients not following 301 automatically.
const html = `<!DOCTYPE html><html lang="en"><head><meta charset=\"utf-8\"><meta http-equiv=\"refresh\" content=\"0; url=/enhanced-security-scanner\" /><link rel=\"canonical\" href=\"/enhanced-security-scanner\" /><title>Redirecting...</title></head><body><p>Redirecting to <a href=\"/enhanced-security-scanner\">Enhanced Security Scanner</a>...</p></body></html>`;
---
{html}
