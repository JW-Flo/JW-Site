{
  "name": "@atlasit/jw-immersive",
  "type": "module",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "astro dev",
    "dev:docker": "docker-compose up",
    "build": "astro build",
    "preview": "astro preview",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "pages:dev": "wrangler pages dev ./dist --compatibility-date=2025-08-29",
    "deploy:preview": "wrangler pages deploy ./dist --branch preview",
    "deploy": "wrangler pages deploy ./dist",
    "auth:login": "unset CLOUDFLARE_API_TOKEN && npx wrangler login",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:migrate": "wrangler d1 migrations apply DB",
    "rotate:consent-admin-key": "node scripts/rotate-consent-admin-key.mjs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.6.7",
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/sitemap": "^3.1.0",
    "@astrojs/tailwind": "^5.1.0",
    "astro": "^5.13.5",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.41",
    "puppeteer": "^24.17.1",
    "tailwindcss": "^3.4.7",
    "tslib": "^2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250830.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.14.10",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.33.1"
  }
}
