---
import { LayoutShell, Card, Button } from '@atlasit/ui';

const title = "Orchestrator - AtlasIT";
const content = `
  <h1 class="text-3xl font-bold mb-6">Workflow Orchestrator</h1>

  <div class="mb-6">
    <h2 class="text-xl font-semibold mb-4">Active Workflows</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      ${Card({
        title: 'User Onboarding',
        content: 'Automates new user setup, permissions, and notifications.',
        link: { text: 'Edit', href: '/orchestrator/user-onboarding' }
      })}
      ${Card({
        title: 'Security Incident Response',
        content: 'Automated response to security alerts and incidents.',
        link: { text: 'Edit', href: '/orchestrator/security-response' }
      })}
      ${Card({
        title: 'Backup Schedule',
        content: 'Daily automated backups with verification.',
        link: { text: 'Edit', href: '/orchestrator/backup' }
      })}
    </div>
  </div>

  <div class="bg-gray-800 p-6 rounded-lg">
    <h2 class="text-xl font-semibold mb-4">Create New Workflow</h2>
    <form class="space-y-4">
      <input type="text" placeholder="Workflow Name" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-700 text-white" required>
      <textarea placeholder="Description" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-700 text-white" required></textarea>
      <select class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-700 text-white" required>
        <option value="">Select Trigger</option>
        <option value="schedule">Schedule</option>
        <option value="event">Event</option>
        <option value="manual">Manual</option>
      </select>
      ${Button({
        children: 'Create Workflow',
        variant: 'primary',
        size: 'md'
      })}
    </form>
  </div>
`;

export const orchestratorHtml = LayoutShell({ title, children: content });
---

<html lang="en" set:html={orchestratorHtml}></html>
