---
import { LayoutShell, Card, Button } from '@atlasit/ui';

const title = "Compliance - AtlasIT";
const content = `
  <h1 class="text-3xl font-bold mb-6">Compliance Center</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    ${Card({
      title: 'GDPR Compliance',
      content: 'Ensure compliance with EU data protection regulations.',
      link: { text: 'Manage', href: '/compliance/gdpr' }
    })}
    ${Card({
      title: 'HIPAA Compliance',
      content: 'Healthcare data protection and privacy compliance.',
      link: { text: 'Manage', href: '/compliance/hipaa' }
    })}
    ${Card({
      title: 'Audit Reports',
      content: 'Generate and manage compliance audit reports.',
      link: { text: 'View Reports', href: '/compliance/audits' }
    })}
  </div>

  <div class="bg-gray-800 p-6 rounded-lg">
    <h2 class="text-xl font-semibold mb-4">Compliance Status</h2>
    <div class="space-y-4">
      <div class="flex justify-between items-center">
        <span>Data Encryption</span>
        <span class="text-green-400">✅ Compliant</span>
      </div>
      <div class="flex justify-between items-center">
        <span>Access Controls</span>
        <span class="text-green-400">✅ Compliant</span>
      </div>
      <div class="flex justify-between items-center">
        <span>Audit Logging</span>
        <span class="text-yellow-400">⚠️ Partial</span>
      </div>
      <div class="flex justify-between items-center">
        <span>Data Retention</span>
        <span class="text-red-400">❌ Non-compliant</span>
      </div>
    </div>
  </div>
`;

export const complianceHtml = LayoutShell({ title, children: content });
---

<html lang="en" set:html={complianceHtml}></html>
