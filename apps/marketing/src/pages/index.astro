---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="AtlasIT - Powering Modern IT">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <header class="py-12 text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">AtlasIT</h1>
      <p class="text-xl text-gray-600 mb-8">Powering Modern IT</p>
      <a href="/team/jw" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700">Meet the Team</a>
    </header>
    <main class="container mx-auto px-4 py-12">
      <p class="text-center text-gray-700">Welcome to AtlasIT platform.</p>
    </main>
  </div>
</BaseLayout>
