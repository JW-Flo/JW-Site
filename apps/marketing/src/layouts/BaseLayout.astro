---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="AtlasIT - Powering Modern IT" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900">
    <!-- Navigation -->
    <nav class="bg-blue-600 text-white p-4">
      <div class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-xl font-bold">AtlasIT</a>
        <div class="space-x-4">
          <a href="/" class="hover:text-blue-200">Home</a>
          <a href="/team/jw" class="hover:text-blue-200">Team JW</a>
          <a href="/team/jw/immersive" class="hover:text-blue-200">Immersive</a>
          <a href="/contact" class="hover:text-blue-200">Contact</a>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>
