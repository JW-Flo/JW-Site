---
const { title = 'Cloudflare Feature Demo', description = 'Demonstrating breadth of Cloudflare platform capabilities', noIndex = false } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {noIndex && <meta name="robots" content="noindex,nofollow" />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="font-sans antialiased max-w-3xl mx-auto p-6">
    <header class="mb-8">
      <h1 class="text-2xl font-bold">{title}</h1>
      <nav class="mt-2 flex gap-4 text-sm">
        <a href="/" >Home</a>
        <a href="/edge-demo/">Edge Demo</a>
        <a href="/guestbook/">Guestbook</a>
        <a href="/geo-test/">Geo</a>
        <a href="/r2/">R2</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="mt-12 text-xs opacity-70">Built for Cloudflare interview prep.</footer>
  </body>
</html>
